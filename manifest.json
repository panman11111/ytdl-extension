{
    "manifest_version": 3,
    "name": "YouTube Downloader",
    "version": "1.0",
    "description": "YouTube動画を最高画質でダウンロード",
    "permissions": [
        "nativeMessaging",
        "activeTab",
        "cookies"
    ],
    "host_permissions": [
        "*://*.youtube.com/*",
        "*://*.zoom.us/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "YouTube Downloader"
    },
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    }
}