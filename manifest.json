{
    "manifest_version": 3,
    "name": "Video Downloader",
    "version": "1.0",
    "permissions": [
        "nativeMessaging",
        "activeTab",
        "cookies",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Video Downloader"
    },
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    }
}